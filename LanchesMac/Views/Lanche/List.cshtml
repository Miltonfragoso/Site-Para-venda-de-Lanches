
@*Diretiva para especificar o tipo que estou tratando na minha view
    neste caso uma lista de lanche
*@
@*@model IEnumerable<LanchesMac.Models.Lanche>*@

@*foreach para percorrer minha lista de lanche
    onde var lenche é uma variável e Model==Lista de Lanche.
*@

@using LanchesMac.Models
@model IEnumerable<Lanche>

<div><h2>Todos os lanches</h2></div>

@foreach (var lanche in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4"> 
        <div class="thumbnail">
            <img src="@lanche.ImagemUrl"/>
        </div>
        <div class="caption">
            <h3 class="pull-right"> @lanche.Preco.ToString("c")</h3>
            <h3>
                @lanche.Nome
            </h3>
            <p>@lanche.DescricaoCurta</p>
        </div>
    </div>
}